<!-- Unlock when water depot is unlocked -->
    
    <ModOp Type="AddNextSibling" GUID='130248'>
        <Asset>
          <Template>Trigger</Template>
          <Values>
            <Standard>
              <GUID>1500001005</GUID>
              <Name>Depot (Land) OW</Name>
            </Standard>
            <Trigger>
              <TriggerCondition>
                <Template>ConditionUnlocked</Template>
                <Values>
                  <Condition />
                  <ConditionUnlocked>
                    <UnlockNeeded>1010519</UnlockNeeded>
                  </ConditionUnlocked>
                  <ConditionPropsNegatable />
                </Values>
              </TriggerCondition>
              <TriggerActions>
                <Item>
                  <TriggerAction>
                    <Template>ActionUnlockAsset</Template>
                    <Values>
                      <Action />
                      <ActionUnlockAsset>
                        <UnhideAssets>
                          <Item>
                            <Asset>1500001001</Asset>
                          </Item>
                        </UnhideAssets>
                        <UnlockAssets>
                          <Item>
                            <Asset>1500001001</Asset>
                          </Item>
                        </UnlockAssets>
                      </ActionUnlockAsset>
                    </Values>
                  </TriggerAction>
                </Item>
              </TriggerActions>
            </Trigger>
            <TriggerSetup />
          </Values>
        </Asset>
    </ModOp>
    
