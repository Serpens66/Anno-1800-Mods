                                      <DiplomacyAction>RequestCeaseFire</DiplomacyAction>
                                    </ActionExecuteDiplomaticAction>
                                  </Values>
                                </Action>
                              </Item>
                            </Actions>
                          </ActionList>
                        </Values>
                      </DelayedActions>
                    </ActionDelayedActions>
                  </Values>
