                            <Item>
                              <Asset>1500003500</Asset>
                            </Item>
                          </UnlockAssets>
                        </ActionUnlockAsset>
                      </Values>
                    </TriggerAction>
                  </Item>
                </TriggerActions>
              </Trigger>
            </Values>
          </ResetTrigger>
        </Trigger>
        <TriggerSetup>
          <AutoRegisterTrigger>0</AutoRegisterTrigger>
          <UsedBySecondParties>1</UsedBySecondParties>
        </TriggerSetup>
      </Values>
    </Asset>
