        </Trigger>
        <TriggerSetup>
          <AutoRegisterTrigger>1</AutoRegisterTrigger>
          <UsedBySecondParties>1</UsedBySecondParties>
        </TriggerSetup>
      </Values>
    </Asset>
    
    <!-- Make sure AI only gets one of them, so lock it. and if it looses it, unlock it again -->
