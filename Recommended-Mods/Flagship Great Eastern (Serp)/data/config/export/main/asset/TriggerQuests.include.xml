            <Template>ConditionPlayerCounter</Template>
            <Values>
              <Condition />
              <ConditionPlayerCounter>
                <PlayerCounter>ObjectBuilt</PlayerCounter>
                <Context>1500003500</Context>
                <CounterAmount>1</CounterAmount>
