              <ConditionPlayerCounter>
                 <PlayerCounter>PopulationByLevel</PlayerCounter>
                <Context>15000003</Context>
                <CounterAmount>2000</CounterAmount>
              </ConditionPlayerCounter>
            </Values>
          </TriggerCondition>
          
