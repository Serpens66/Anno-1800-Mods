<ModOps>
  
  <!-- https://github.com/jakobharder/anno1800-mod-loader/blob/main/doc/modloader11.md#patching-infotip-exportbin -->
    <!-- to export the tooltips from the game use FileDBReader and the FileFormat "infotip.xml" and unpack "data\infotips\export.bin" -->
    <!-- or download it in anno modding discord here: -->
    <!-- https://discord.com/channels/578443209940926465/1146098268850376816/1149910673678159964 -->
  
  <!-- Also display the available amount of godlike permits for moving clay/oil/change fertility/change mine and ResearchKit -->
    <!-- They all use GUID 127617 to diplay the cost, which is seriously just "1" -->
    <!-- There is no way to automatically fetch the correct GUID for usage with [Research GodlikeAmount(GUID)] to get the available amount. -->
     <!-- we have to hardcode it (just like the devs did), so we will replace 127617 with the new text -->
  
    <ModOp Type="replace" Path="//InfoElement[Icon/IconGUID='124846' and Text/TextGUID='127617']/Text/TextGUID">
      <Text>[Research GodlikeAmount(124846)] / [AssetData(127617) Text]</Text>
    </ModOp>
    <ModOp Type="replace" Path="//InfoElement[Icon/IconGUID='124839' and Text/TextGUID='127617']/Text/TextGUID">
      <Text>[Research GodlikeAmount(124839)] / [AssetData(127617) Text]</Text>
    </ModOp>
    <ModOp Type="replace" Path="//InfoElement[Icon/IconGUID='124840' and Text/TextGUID='127617']/Text/TextGUID">
      <Text>[Research GodlikeAmount(124840)] / [AssetData(127617) Text]</Text>
    </ModOp>
    <ModOp Type="replace" Path="//InfoElement[Icon/IconGUID='124841' and Text/TextGUID='127617']/Text/TextGUID">
      <Text>[Research GodlikeAmount(124841)] / [AssetData(127617) Text]</Text>
    </ModOp>
    <ModOp Type="replace" Path="//InfoElement[Icon/IconGUID='124842' and Text/TextGUID='127617']/Text/TextGUID">
      <Text>[Research GodlikeAmount(124842)] / [AssetData(127617) Text]</Text>
    </ModOp>
  
  
</ModOps>