<ModOps>

  <!-- make pirates always accept a Peace Request for free -->
  
  <ModOp Type="merge" GUID='73,76' Path="/Values/Diplomacy">                                      
    <DiplomacyActionBalancing>
      <RequestPeace>
        <AgreementThreshold>-998</AgreementThreshold>
        <PartialAgreementThreshold>-999</PartialAgreementThreshold>
      </RequestPeace>
    </DiplomacyActionBalancing>
    <ReputationChangeCalculation>
      <Treaties>
        <ReputationValues>
          <Peace>
            <AddingTreaty>30</AddingTreaty>
          </Peace>
        </ReputationValues>
      </Treaties>
    </ReputationChangeCalculation>
    <ActionDebuffs>
      <DebuffSettings>
        <Peace>
          <DiceDebuff>0</DiceDebuff>
          <DebuffTime>0</DebuffTime>
        </Peace>
      </DebuffSettings>
    </ActionDebuffs>
    <DiplomacyAI>
      <ActionCooldown>
        <RequestPeace>
          <Cooldown>0</Cooldown>
        </RequestPeace>
      </ActionCooldown>
    </DiplomacyAI>
  </ModOp>
  
  


</ModOps>