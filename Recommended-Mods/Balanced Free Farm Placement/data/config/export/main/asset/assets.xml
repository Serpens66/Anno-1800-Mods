<ModOps>
    
  <!-- roughly based on formula math.sqrt(fieldcount * 20 / math.pi) -->
    
  <!-- 64 or less fields -->
  <ModOp Type="merge" Path="//Values/ModuleOwner[ModuleBuildRadius='0' and ModuleLimits/Main/Limit&lt;='64']" AllowNoMatch="1">        
    <ModuleBuildRadius>20</ModuleBuildRadius>
    <AdditionalModuleMustBeMainBuildingAdjacent>0</AdditionalModuleMustBeMainBuildingAdjacent>
  </ModOp>
  <!-- between 65 and 100 fields -->
  <ModOp Type="merge" Path="//Values/ModuleOwner[ModuleBuildRadius='0' and ModuleLimits/Main/Limit&gt;'64' and ModuleLimits/Main/Limit&lt;='100']" AllowNoMatch="1">        
    <ModuleBuildRadius>24</ModuleBuildRadius>
    <AdditionalModuleMustBeMainBuildingAdjacent>0</AdditionalModuleMustBeMainBuildingAdjacent>
  </ModOp>
  <!-- between 101 and 128 fields -->
  <ModOp Type="merge" Path="//Values/ModuleOwner[ModuleBuildRadius='0' and ModuleLimits/Main/Limit&gt;'100' and ModuleLimits/Main/Limit&lt;='128']" AllowNoMatch="1">        
    <ModuleBuildRadius>28</ModuleBuildRadius>
    <AdditionalModuleMustBeMainBuildingAdjacent>0</AdditionalModuleMustBeMainBuildingAdjacent>
  </ModOp>
  <!-- between 129 and 128 fields -->
  <ModOp Type="merge" Path="//Values/ModuleOwner[ModuleBuildRadius='0' and ModuleLimits/Main/Limit&gt;'128' and ModuleLimits/Main/Limit&lt;='168']" AllowNoMatch="1">        
    <ModuleBuildRadius>32</ModuleBuildRadius>
    <AdditionalModuleMustBeMainBuildingAdjacent>0</AdditionalModuleMustBeMainBuildingAdjacent>
  </ModOp>
  <!-- between 169 and 200 fields -->
  <ModOp Type="merge" Path="//Values/ModuleOwner[ModuleBuildRadius='0' and ModuleLimits/Main/Limit&gt;'168' and ModuleLimits/Main/Limit&lt;='200']" AllowNoMatch="1">        
    <ModuleBuildRadius>36</ModuleBuildRadius>
    <AdditionalModuleMustBeMainBuildingAdjacent>0</AdditionalModuleMustBeMainBuildingAdjacent>
  </ModOp>
  <!-- between 201 and 300 fields -->
  <ModOp Type="merge" Path="//Values/ModuleOwner[ModuleBuildRadius='0' and ModuleLimits/Main/Limit&gt;'200' and ModuleLimits/Main/Limit&lt;='300']" AllowNoMatch="1">        
    <ModuleBuildRadius>40</ModuleBuildRadius>
    <AdditionalModuleMustBeMainBuildingAdjacent>0</AdditionalModuleMustBeMainBuildingAdjacent>
  </ModOp>
  <!-- more than 300 (no vanilla and likely also no mod farm needs so many fields) -->
  <ModOp Type="merge" Path="//Values/ModuleOwner[ModuleBuildRadius='0' and ModuleLimits/Main/Limit&gt;'300']" AllowNoMatch="1">        
    <ModuleBuildRadius>50</ModuleBuildRadius>
    <AdditionalModuleMustBeMainBuildingAdjacent>0</AdditionalModuleMustBeMainBuildingAdjacent>
  </ModOp>
  
</ModOps>