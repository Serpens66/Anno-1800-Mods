<ModOps>
    
    <!-- add a new Monument template for the Kaiserdom, because the monument template does not include PublicService and therefore game will crash since GU 16, when we add it in assets.xml to the Kaiserdom -->
    <!-- copied the monument template from game version 16.1 (data26), named it Monument_Kaiserdom and added PublicService-->
    <!-- and replaced InfoDescription (does not work for whatever reason) and IncomeCategory -->
        
    <ModOp Type="addNextSibling" Template="Monument">
        <Template>
          <Name>Monument_Kaiserdom</Name>
          <Properties>
            <Standard>
              <InfoDescription>1500000006</InfoDescription>
            </Standard>
            <Building>
              <BuildingType>Factory</BuildingType>
              <BuildingCategoryName>100002</BuildingCategoryName>
              <DestructionConfirmation>1</DestructionConfirmation>
            </Building>
            <Blocking />
            <Cost />
            <Object>
              <IgnoreForMinimapGeneration>1</IgnoreForMinimapGeneration>
            </Object>
            <Mesh />
            <Selection>
              <GUIType>Production</GUIType>
              <OnSelection>
                <IsBaseAutoCreateAsset>1</IsBaseAutoCreateAsset>
                <Values>
                  <ActionList />
                </Values>
              </OnSelection>
            </Selection>
            <Text />
            <Constructable>
              <DestructionCategory>Production</DestructionCategory>
            </Constructable>
            <Locked />
            <SoundEmitter>
              <DestroySounds>
                <Item>
                  <Sound>9818756</Sound>
                </Item>
              </DestroySounds>
              <ConstructionSounds>
                <BuildFailed>
                  <Item>
                    <Sound>9818387</Sound>
                  </Item>
                </BuildFailed>
                <BuildMoveStart>
                  <Item>
                    <Sound>9818755</Sound>
                  </Item>
                </BuildMoveStart>
                <BuildMoveSuccess>
                  <Item>
                    <Sound>203995</Sound>
                  </Item>
                </BuildMoveSuccess>
                <BuildMoveEnd>
                  <Item>
                    <Sound>200141</Sound>
                  </Item>
                </BuildMoveEnd>
              </ConstructionSounds>
            </SoundEmitter>
            <FeedbackController>
              <NightBehavior>HideNone</NightBehavior>
              <StopOldSequenceWhenStartingNewOne>1</StopOldSequenceWhenStartingNewOne>
            </FeedbackController>
            <Infolayer />
            <FactoryBase />
            <LogisticNode />
            <Monument>
              <ConstructionStateText>
                <Interrupted>
                  <Text>163011</Text>
                </Interrupted>
                <OutOfWorkforce>
                  <Text>163026</Text>
                </OutOfWorkforce>
                <WaitingForResources>
                  <Text>163012</Text>
                </WaitingForResources>
                <Processing>
                  <Text>163010</Text>
                </Processing>
              </ConstructionStateText>
              <PhaseCompletedNotification>501327</PhaseCompletedNotification>
            </Monument>
            <Culture>
              <CultureType>Monument</CultureType>
            </Culture>
            <AmbientMoodProvider />
            <Maintenance>
              <IncomeCategory>PublicServiceBuildings</IncomeCategory>
            </Maintenance>
            <Attackable />
            <Pausable />
            <BuildingUnique />
            <UpgradeList />
            <Industrializable>
              <BoostedByIndustrialization>0</BoostedByIndustrialization>
            </Industrializable>
            <QuestObject />
            <Electrifiable />
            <PublicService />
            <BusActivation>
              <ShowInfolayerOnlyIfRelevant>1</ShowInfolayerOnlyIfRelevant>
            </BusActivation>
          </Properties>
        </Template>
    </ModOp>
    
</ModOps>