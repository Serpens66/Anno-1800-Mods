<ModOps>
    
    <!-- change the templates, so showing buffs is the default behaviour. -->
     <!-- if a mod still does not want to to display, it can set it explicit to 0 in assets.xml -->
    
    <ModOp Type="merge" Path="//Properties/Buff">
      <ShouldBeShownInForeignObjectMenu>1</ShouldBeShownInForeignObjectMenu>
    </ModOp>
    
    <ModOp Type="merge" Template="InfluenceTitleBuff" Path="/Properties">
      <Buff>
        <ShouldBeShownInForeignObjectMenu>1</ShouldBeShownInForeignObjectMenu>
      </Buff>
    </ModOp>
    
    <ModOp Type="merge" Template="ShipSpecialist" Path="/Properties">
      <Buff>
        <ShouldBeShownInForeignObjectMenu>1</ShouldBeShownInForeignObjectMenu>
      </Buff>
    </ModOp>
    
    <ModOp Type="merge" Template="HarborOfficeItem" Path="/Properties">
      <Buff>
        <ShouldBeShownInForeignObjectMenu>1</ShouldBeShownInForeignObjectMenu>
      </Buff>
    </ModOp>
    
    <ModOp Type="merge" Template="VehicleItem" Path="/Properties">
      <Buff>
        <ShouldBeShownInForeignObjectMenu>1</ShouldBeShownInForeignObjectMenu>
      </Buff>
    </ModOp>

    
    
    
    
</ModOps>