          <EffectColor>DeepGreen</EffectColor>
        </NewspaperEffectIcon>
      </Values>
    </Asset>
  </ModOp>
  <ModOp Type="AddNextSibling" GUID="501738">
    <Asset>
      <Template>ValueAssetMap</Template>
      <Values>
        <Standard>
          <GUID>1500006098</GUID>
          <Name>ExplosionChanceGlobalIconMap</Name>
          <IconFilename>data/ui/2kimages/main/icons/notification_icons/icon_incident_explosion_outline.png</IconFilename>
        </Standard>
        <ValueAssetMap>
          <ValueAssetMap>
            <Item>
              <ValidFrom>-1000000</ValidFrom>
              <Asset>1500006097</Asset>
            </Item>
            <Item>
              <ValidFrom>-1</ValidFrom>
              <Asset>1500006096</Asset>
            </Item>
            <Item>
              <ValidFrom>1</ValidFrom>
              <Asset>1500006095</Asset>
            </Item>
          </ValueAssetMap>
        </ValueAssetMap>
      </Values>
    </Asset>
  </ModOp>
  
  
  <!-- NewspaperEffectIcon use fitting firechance icon -->
  <ModOp Type="merge" GUID="500628,500629" Path="/Values/Standard">
    <IconFilename>data/ui/2kimages/main/icons/dlc_11/icon_ship_fire_armed_red.png</IconFilename>
