   <!-- and does not display negative values properly -->
  

  
  <!-- add ExplosionChanceGlobal and fix description of FireChanceGlobal -->
  <ModOp Type="merge" GUID="500045" Path="/Values/NewspaperScene/EffectVisualization">
    <ExplosionChanceGlobal>
      <EffectName>14292</EffectName>
      <ArticleValueText>10875</ArticleValueText>
      <IconMap>1500006098</IconMap>
      <EffectDescription>14292</EffectDescription>
      <CategoryIcon>501181</CategoryIcon>
    </ExplosionChanceGlobal>
    <FireChanceGlobal>
      <EffectDescription>10833</EffectDescription>
    </FireChanceGlobal>
    <IllnessChanceGlobal>
      <CategoryIcon>500644</CategoryIcon>
