    <Exceptions />
  </ModOp>
  <ModOp Type="add" Path="//Values/Diplomacy/InitialRelation[DefaultTreaties='War']/Exceptions">
    <Item>
      <Participant>Mod10</Participant>
      <Reputation>100</Reputation>
      <Memory>50</Memory>
      <Treaties>Peace;TradeRights</Treaties>
    </Item>
  </ModOp>
  
  <!-- add to Exceptions in InitialRelation of everyone who does have War as Default -->
