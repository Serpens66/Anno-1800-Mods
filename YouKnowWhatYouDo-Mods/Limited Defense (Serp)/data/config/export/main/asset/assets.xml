<ModOps>
    
   <!-- make towers not allowed to be placed close next to eachother by using SocketScopeRadiusOverlapCategory -->
  <ModOp Type="merge" Path="//Asset[Template='HarborBuildingAttacker']/Values[not(ItemContainer/SocketScopeRadius)]">
    <ItemContainer>
      <SocketScope>Radius</SocketScope>
      <SocketScopeRadius>5</SocketScopeRadius>
      <SocketScopeRadiusOverlapCategory>Mod10</SocketScopeRadiusOverlapCategory>
      <SpawnsFlotsam>0</SpawnsFlotsam>
    </ItemContainer>
  </ModOp>
    
    
</ModOps>