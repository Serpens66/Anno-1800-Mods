  <!-- copy the NeedsElectricity entry (copying makes sure changes by other mods are also copied) -->
     <!-- eg our removal of permit requirement to show cost is also copied this way -->
  <ModOp Type="AddNextSibling" Path="//InfoTipData[Guid='25000020']/InfoElement/InfoElement[InfoElement/Text/TextGUID='13659']" Content="//InfoTipData[Guid='25000020']/InfoElement/InfoElement/InfoElement[InfoElement/Text/TextGUID='12508']">
