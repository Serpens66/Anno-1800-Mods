			<ElementType>8</ElementType>
			<ChildCount>1</ChildCount>
			<VisibilityElement>
				<ElementType>
					<ElementType>2</ElementType>
				</ElementType>
				<ChildCount>2</ChildCount>
				<OperatorType />
			</VisibilityElement>
      
			<ModOpContent/>
      
		</InfoElement>
  </ModOp>
  <!-- using following-sibling to remove all entries with path InfoElement/InfoElement/InfoElement[InfoElement/Text/TextGUID='12508'] if they are found AFTER InfoElement[InfoElement/InfoElement/Text/TextGUID='13659']  -->
