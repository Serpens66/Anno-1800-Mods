  <!-- Show Mod-Settings-Details if Opener was hit. -->
   <!-- If you do not want to sync the settings for all humans, you can add here multiple subtriggers, one ConditionEvent per Mod-Settings-Detail -->
    <!-- and lock/unlock the exclusive settings based on your needs (and register Trigger 1500005208 afterwards to unhide the locked assets or unhide yourself) -->
  <ModOp Type="addNextSibling" GUID="130248">
    <Asset>
      <Template>Trigger</Template>
      <Values>
        <Standard>
          <GUID>1500005032</GUID>
          <Name>Show Mod-Settings-Details if Opener was hit</Name>
        </Standard>
        <Trigger>
          <TriggerCondition>
            <Template>ConditionAlwaysTrue</Template>
            <Values>
              <Condition>
                <SubConditionCompletionOrder>MutuallyExclusive</SubConditionCompletionOrder>
              </Condition>
              <ConditionAlwaysTrue />
            </Values>
          </TriggerCondition>
          <SubTriggers>
            <Item>
              <SubTrigger>
                <Template>AutoCreateTrigger</Template>
                <Values>
                  <Trigger>
                    <TriggerCondition>
                      <Template>ConditionEvent</Template>
                      <Values>
                        <Condition />
                        <ConditionEvent>
                          <ConditionEvent>ObjectBuilt</ConditionEvent>
                          <ContextAsset>1500005030</ContextAsset>
                          <ContextAssetInfolayer>0</ContextAssetInfolayer>
                        </ConditionEvent>
                        <ConditionPropsNegatable />
                      </Values>
                    </TriggerCondition>
                    <TriggerActions>
                      <Item>
                        <TriggerAction>
                          <Template>ActionBuff</Template>
                          <Values>
                            <Action />
                            <ActionBuff>
                              <BuffAsset>1500005031</BuffAsset>
                              <AddBuff>1</AddBuff>
                              <BuffProcessingParticipant>1</BuffProcessingParticipant>
                            </ActionBuff>
                          </Values>
                        </TriggerAction>
                      </Item>
                    </TriggerActions>
                 </Trigger>
                </Values>
              </SubTrigger>
            </Item>
            <!-- when any of the Mod-Settings-Details was hit, execute the following lua script  -->
            <!-- that locks/unlocks the other settings if they are exclusive to each other  -->
            <!-- (and lua also syncs it to all other humans, since we want them to be global settings) -->
            <Item>
              <SubTrigger>
                <Template>AutoCreateTrigger</Template>
                <Values>
                  <Trigger>
                    <TriggerCondition>
                      <Template>ConditionEvent</Template>
                      <Values>
                        <Condition />
                        <ConditionEvent>
                          <ConditionEvent>ObjectBuilt</ConditionEvent>
                          <ContextAsset>1500005034</ContextAsset>
                          <ContextAssetInfolayer>0</ContextAssetInfolayer>
                        </ConditionEvent>
                        <ConditionPropsNegatable />
                      </Values>
                    </TriggerCondition>
                    <TriggerActions>
                      <Item>
                        <TriggerAction>
                          <Template>ActionRegisterTrigger</Template>
                          <Values>
                            <Action />
                            <ActionRegisterTrigger>
                              <TriggerAsset>1500005035</TriggerAsset>
                            </ActionRegisterTrigger>
                          </Values>
                        </TriggerAction>
                      </Item>
                    </TriggerActions>
                 </Trigger>
                </Values>
              </SubTrigger>
            </Item>
          </SubTriggers>
          <ResetTrigger>
            <Template>AutoCreateTrigger</Template>
            <Values>
              <Trigger>
                <TriggerCondition>
                  <Template>ConditionAlwaysTrue</Template>
                  <Values>
                    <Condition />
                    <ConditionAlwaysTrue />
                  </Values>
                </TriggerCondition>
              </Trigger>
            </Values>
          </ResetTrigger>
        </Trigger>
        <TriggerSetup>
          <AutoRegisterTrigger>1</AutoRegisterTrigger>
          <UsedBySecondParties>0</UsedBySecondParties>
        </TriggerSetup>
      </Values>
    </Asset>
    
    <!-- put into a seperate trigger, to be sure 1500005032 can reset fast without waiting -->
     <!-- and still having the advantage here to use ConditionPlayerCounter and wait for deletion before resetting -->
