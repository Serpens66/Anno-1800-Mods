                      <PopupType>ResetConsoleOptionsConfirmation</PopupType>
                    </ActionTriggerPopup>
                  </Values>
                </TriggerAction>
              </Item>
            </TriggerActions>
          </Trigger>
          <TriggerSetup>
            <AutoRegisterTrigger>0</AutoRegisterTrigger>
            <UsedBySecondParties>0</UsedBySecondParties>
          </TriggerSetup>
        </Values>
      </Asset>
    </ModOp>
  
