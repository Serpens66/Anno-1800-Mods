<ModOps>
  
    <!-- support all populations to provide researchpoints in the researchinfotip -->

  <!-- 120340 ResearchInfoTip -->
  <!-- Instead of hardcoding each population, we simply loop over all populations -->
   <!-- and check if they provide research points, if yes, display them -->

  <ModOp Type="AddNextSibling" Path="//InfoTipData[Guid='120340']/InfoElement[Value/Text='[Economy MetaStorage ResearchPerPopulation(114330) &gt;&gt; balance]']">
    <InfoElement>
      <ElementType>8</ElementType>
      <ChildCount>1</ChildCount>
      <VisibilityElement>
        <ElementType>
          <ElementType>2</ElementType>
        </ElementType>
        <OperatorType />
      </VisibilityElement>
      <InfoElement>
        <ElementType>7</ElementType>
        <ChildCount>1</ChildCount>
        <VisibilityElement>
          <ElementType>
            <ElementType>2</ElementType>
          </ElementType>
          <OperatorType />
        </VisibilityElement>
        <InfoElement>
          <ElementType>4</ElementType>
          <VisibilityElement>
            <ElementType>
              <ElementType>2</ElementType>
            </ElementType>
            <ChildCount>1</ChildCount>
            <VisibilityElement>
              <ElementType>
                <ElementType>1</ElementType>
              </ElementType>
              <CompareOperator>
                <CompareOperator>5</CompareOperator>
              </CompareOperator>
              <ResultType>
                <ResultType>1</ResultType>
              </ResultType>
              <Condition>[Economy MetaStorage ResearchPerPopulation([Economy PopulationLevels AT(#index0#) Guid])]</Condition>
            </VisibilityElement>
            <OperatorType />
          </VisibilityElement>
          <Icon>
            <IconText>[Economy PopulationLevels AT(#index0#) Icon]</IconText>
            <Style />
          </Icon>
          <Text>
            <Text>[Economy PopulationLevels AT(#index0#) Text]</Text>
            <Style />
          </Text>
          <Value>
            <Text>[Economy MetaStorage ResearchPerPopulation([Economy PopulationLevels AT(#index0#) Guid]) &gt;&gt; balance]</Text>
            <Style />
          </Value>
          <WarningType />
          <BackgroundType />
        </InfoElement>
        <Source>[Economy PopulationLevels COUNT]</Source>
      </InfoElement>
    </InfoElement>
  </ModOp>
  
  <!-- remove the hardcoded vanilla entries for elders and scholars -->
  <ModOp Type="remove" Path="//InfoTipData[Guid='120340']/InfoElement[Value/Text='[Economy MetaStorage ResearchPerPopulation(114330) &gt;&gt; balance]']"></ModOp>
  <ModOp Type="remove" Path="//InfoTipData[Guid='120340']/InfoElement[Value/Text='[Economy MetaStorage ResearchPerPopulation(118745) &gt;&gt; balance]']"></ModOp>

  
  
</ModOps>








