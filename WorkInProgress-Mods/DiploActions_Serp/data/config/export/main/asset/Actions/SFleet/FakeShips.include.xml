<ModOps>

  <!-- used GUIDs: 1500001330 bis einschl. 1500001339 -->
  <!-- noch frei ab 1500001332 -->
  
  <!-- vllt später noch Schiffe von Mods zufügen oder BuildPermit Schiffe oder Airships. -->
  <!-- Wichtig ist, dass die Main Properties zwischen Fake und changeGUID Schiff identisch sein müssen, sonst Crash! -->
  
  
  <!-- we can not spawn ships with lua. But we can use changeGUID.  -->
   <!-- So we spawn generic invisible Fakeships with xml and then change their GUID with lua to a random one from our list -->
  
  <!-- using ForcedInvalidPath.cfg because InitialVisibility does not seem to work always -->
  
  <!-- warship based on 100440 Liner -->
  <ModOp Type="addNextSibling" GUID='100440'>
		<Asset>
			<BaseAssetGUID>100440</BaseAssetGUID>
			<Values>
				<Standard>
					<GUID>1500001330</GUID>
					<Name>Warship Fakeship</Name>
				</Standard>
        <Object>
          <Variations>
            <Item>
              <Filename>data/graphics/ForcedInvalidPath.cfg</Filename>
            </Item>
          </Variations>
          <Skins>
            <SkinList />
          </Skins>
        </Object>
        <Mesh>
          <InitialVisibility>0</InitialVisibility>
          <ConstructionEffectDuration>0</ConstructionEffectDuration>
          <DeconstructionEffectDuration>0</DeconstructionEffectDuration>
          <ChangeGUIDEffectDuration>0</ChangeGUIDEffectDuration>
        </Mesh>
        <Walking>
          <ForwardSpeed>0</ForwardSpeed>
        </Walking>
        <CommandQueue>
          <IsPlayerControllableVehicle>0</IsPlayerControllableVehicle>
          <IsDestructable>0</IsDestructable>
          <InsecurityAttractiveness>0</InsecurityAttractiveness>
          <MilitaryShipPoints>0</MilitaryShipPoints>
          <TradeShipPoints>0</TradeShipPoints>
          <AirShipPoints>0</AirShipPoints>
        </CommandQueue>
        <ShipMaintenance>
          <Maintenance>0</Maintenance>
          <DisableShipDestructionTracking>1</DisableShipDestructionTracking>
          <DisableEscort>1</DisableEscort>
        </ShipMaintenance>
        <Attackable>
          <AttackableType>[NONE]</AttackableType>
        </Attackable>
        <ItemContainer>
          <SocketCount>0</SocketCount>
          <SpawnsFlotsam>0</SpawnsFlotsam>
          <FlotsamNoRadius>1</FlotsamNoRadius>
          <SlotCount>0</SlotCount>
        </ItemContainer>
			</Values>
		</Asset>
  </ModOp>
